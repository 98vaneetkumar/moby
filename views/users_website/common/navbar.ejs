<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Your Page Title</title>
    <!-- Font Awesome for Icons -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
      /* Navbar Styles */
      .navbar {
        background: #2a2a2a;
        color: white;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 6px 0px;
        position: fixed;
        top: 0;
        width: 100%;
        left: 0;
        z-index: 1000;
      }

      .left-section .menu-btn {
        background: none;
        border: none;
        font-size: 24px;
        color: white;
        cursor: pointer;
        padding-left: 50px;
      }

      .right-section {
        display: flex;
        align-items: center;
        gap: 15px;
        padding-right: 50px;
      }

      .search-icon {
        font-size: 18px;
        cursor: pointer;
      }

      .username {
        font-size: 16px;
        font-weight: 500;
      }

      .user-icon {
        font-size: 18px;
        color: white;
      }

      /* Sidebar Styles */
      .sidebar {
        width: 250px;
        height: 100%;
        position: fixed;
        top: 0;
        left: -250px;
        background: #222;
        transition: 0.3s;
        z-index: 1001;
      }

      .sidebar.active {
        left: 0;
      }

      .overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 999;
        display: none;
      }

      .overlay.active {
        display: block;
      }
      .sidebar-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 14px;
        background: #222;
        color: white;
        font-size: 16px;
        font-weight: bold;
      }

      .close-btn {
        background: none;
        border: none;
        font-size: 20px;
        color: white;
        cursor: pointer;
      }

      .sidebar-menu {
        list-style-type: none;
        padding: 0;
        margin-top: 20px;
      }

      .sidebar-menu li {
        padding: 15px 20px;
        text-align: left;
      }

      .sidebar-menu li a {
        color: white;
        text-decoration: none;
        font-size: 16px;
        display: block;
        padding: 10px;
      }

      .sidebar-menu li a:hover {
        background: #444;
        border-radius: 5px;
      }

      .close-btn {
        background: none;
        border: none;
        font-size: 20px;
        color: white;
        cursor: pointer;
      }

      .sidebar.active .close-btn {
        display: block;
      }
      /* Active Sidebar Item */
      .sidebar-menu li a.active-item {
        background-color: #555 !important;
        border-radius: 5px;
      }
    </style>
  </head>

  <body>
    <!-- Navbar -->
    <nav class="navbar">
      <div class="left-section">
        <button id="menu-toggle" class="menu-btn">
          <i class="fas fa-bars"></i>
          <!-- Hamburger Menu -->
        </button>
      </div>

      <div class="right-section">
        <i class="fas fa-search search-icon"></i>
        <!-- Search Icon -->
        <span class="user-name fw-bolder" style="color: white">
          Amanda
          <!-- <%= %> -->
          <!-- session.firstName -->
        </span>
        <!-- Session Username -->
        <a href="/users/userprofile">
          <i class="far fa-user user-icon"></i>
      </a>
        <!-- Default User Icon -->
      </div>
    </nav>

    <!-- Sidebar -->
    <!-- Sidebar -->
    <div id="sidebar" class="sidebar">
      <div class="sidebar-header">
        <span>Welcome to Moby App</span>
        <button id="close-sidebar" class="close-btn">
          <i class="fas fa-times"></i>
        </button>
      </div>
      <ul class="sidebar-menu">
        <li><a href="/users/homepage">All Rides</a></li>
        <li><a href="/users/activerides">Active</a></li>
        <li><a href="/users/upcomingrides">Upcoming</a></li>
        <li><a href="/users/ridehistory">Ride History</a></li>
        <li><a href="/users/notificationpage">Notification</a></li>
        <li><a href="#" onclick="logoutUser()">Logout</a></li>
      </ul>
    </div>

    <!-- Overlay -->
    <div id="overlay" class="overlay"></div>

    <script>
      // Toggle Sidebar
      document
        .getElementById("menu-toggle")
        .addEventListener("click", function () {
          const sidebar = document.getElementById("sidebar");
          const overlay = document.getElementById("overlay");

          sidebar.classList.toggle("active");
          overlay.classList.toggle("active");
        });

      // Logout Function
      function logoutUser() {
        Swal.fire({
          title: "Are you sure?",
          text: "You will be logged out!",
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#3085d6",
          cancelButtonColor: "#d33",
          confirmButtonText: "Yes, logout!",
        }).then((result) => {
          if (result.isConfirmed) {
            // Simulate logout success for demonstration
            Swal.fire({
              title: "Logged Out!",
              text: "You have been logged out successfully",
              icon: "success",
              timer: 2000,
              timerProgressBar: true,
              showConfirmButton: false,
            }).then(() => {
              // Redirect to the login page after successful logout
              window.location.href = "/users/users"; // Replace with your actual logout endpoint
            });
