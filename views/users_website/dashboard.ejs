<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ride Request Form</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css"
    />
    <script
      src="https://kit.fontawesome.com/a076d05399.js"
      crossorigin="anonymous"
    ></script>
    <style>
      body {
        display: flex;
        height: 100vh;
        background-color: #f8f8f8;
        font-family: "Lato", sans-serif;
      }
      .left-side {
        width: 50%;
        padding: 50px;
      }
      .right-side {
        width: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .right-side img {
        width: 100%;
        max-height: 60vh;
        object-fit: cover;
      }
      h1 {
        font-size: 24px;
        margin-bottom: 10px;
      }
      h2 {
        font-size: 14px;
        margin-bottom: 10px;
        color: #3e3d3d;
      }
      p {
        font-size: 12px;
        margin-top: 20px;
        width: 65%;
      }
      .form-group {
        margin-bottom: 10px;
      }
      input,
      select,
      textarea {
        width: 60%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 10px;
      }
      .ride-button {
        background: #2c2c2c;
        color: white;
        padding: 12px;
        border-radius: 20px;
        cursor: pointer;
        width: 30%;
        text-align: center;
        font-size: 16px;
      }
      .ride-button span {
        margin-left: 8px;
      }
      .time-select {
        width: 60%;
      }
      .popup-container {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
        z-index: 1000;
      }
      .popup-content {
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        width: 320px;
        color: black;
        text-align: center;
      }
      .card-container {
        margin-top: 10px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 10px;
        width: 50%;
      }
      .card {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px;
        border-bottom: 1px solid #ccc;
      }
      .card-icon {
        width: 40px;
        height: auto;
        margin-right: 10px;
      }
      .button-group {
        display: flex;
        justify-content: space-between;
        width: 60%;
        gap: 10px;
      }

      .ride-button {
        background: #2c2c2c;
        color: white;
        padding: 12px;
        border-radius: 20px;
        cursor: pointer;
        width: 30%;
        text-align: center;
        font-size: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .ride-button i {
        margin-left: 8px;
      }

      .back-button,
      .submit-button {
        padding: 12px;
        border-radius: 20px;
        cursor: pointer;
        width: 45%;
        text-align: center;
        font-size: 16px;
        border: none;
      }
      .back-button {
        background-color: #ccc;
        color: black;
      }
      .submit-button {
        background-color: #2c2c2c;
        color: white;
      }
      .pay_secoint {
        display: flex;
        width: 100%;
      }

      .pay_card {
        max-width: 400px;
        width: 100%;
        margin: auto;
        border-radius: 10px;
        padding: 20px;
      }

      .pay_card h1 {
        font-size: 24px;
        font-weight: 600;
        margin-bottom: 15px;
      }

      .pay_card h4 {
        font-size: 14px;
        font-weight: 600;
        margin-bottom: 10px;
      }

      .pay_label {
        font-size: 14px;
        font-weight: 500;
        margin-bottom: 5px;
        display: inline-block;
      }

      .pay_card #card-element,
      .pay_int {
        padding: 10px;
        border-radius: 5px;
        box-shadow: 2px 1px 12px #14141457;
        margin-bottom: 20px;
        border: none;
        outline: none;
        width: 100%;
      }

      .pay_submit_btn {
        padding: 11px 25px;
        border-radius: 7px;
        background-color: #cf0f23;
        color: #fff;
        font-size: 14px;
        border: none;
        font-weight: 600;
        cursor: pointer;
      }
    </style>
  </head>
  <body>
    <!-- Include Navbar -->
    <%- include('./common/navbar.ejs') %>

    <div class="left-side">
      <div id="initial-form">
        <h1>Start Ride Request</h1>
        <h2>Enter Patient's Details</h2>
        <div class="form-group">
          <input type="text" placeholder="First Name*" required />
        </div>
        <div class="form-group">
          <input type="text" placeholder="Last Name*" required />
        </div>
        <div class="form-group">
          <input type="text" placeholder="Patient's Mobile Number*" required />
        </div>

        <h2>Pickup and Drop-off Addresses</h2>
        <div class="form-group">
          <input type="text" placeholder="Pickup Address (US)*" required />
        </div>
        <div class="form-group">
          <input type="text" placeholder="Drop-off Address (US)*" />
        </div>
        <div class="form-group">
          <textarea
            rows="3"
            placeholder="Note for Driver (Optional)"
          ></textarea>
        </div>

        <div class="ride-button" onclick="showRideDetails()">
          Ride Details <span>&#10132;</span>
        </div>
      </div>

      <div id="ride-details-form" style="display: none; margin-top: 30px">
        <div class="form-group">
          <input
            type="text"
            id="pickup-date"
            placeholder="Pickup Date*"
            required
          />
        </div>
        <div class="form-group">
          <select id="pickup-time" class="time-select">
            <option value="" disabled selected hidden>Pickup Time*</option>
            <option value="now">Now</option>
            <option value="5min">In 5 minutes</option>
            <option value="10min">In 10 minutes</option>
            <option value="30min">In 30 minutes</option>
            <option value="1hour">In 1 hour</option>
            <option value="2hour">In 2 hours</option>
          </select>
        </div>

        <h2>Ride Cost</h2>
        <div>
          <i class="fa fa-car" aria-hidden="true"></i> Within 15 minutes - $38.4
          <br />
          08:41 AM - 08:56 AM
        </div>

        <div class="card-container">
          <h2>Payment Methods</h2>
          <div class="card">
            <img
              src="https://upload.wikimedia.org/wikipedia/commons/0/04/Visa.svg"
              class="card-icon"
              alt="Visa"
            />
            <span>**** **** **** 1234</span>
            <button class="delete-card">Delete</button>
          </div>
          <a href="#" onclick="showAddCardPopup()" style="color: black"
            >Add Card</a
          >
        </div>

        <p>
          By selecting "Request ride" I'm certifying that I have the rider's
          consent for Moby to use their information and to send SMS message
          (rates may apply) for the ride.
        </p>
        <div class="button-group">
          <div class="back-button" onclick="backToInitialForm()">Back</div>
          <div class="submit-button" onclick="submitRide()">
            Submit Ride <span>&#10132;</span>
          </div>
        </div>
      </div>
    </div>

    <div class="right-side">
      <img src="/assets/clientbg.png" alt="Client Background" />
    </div>

    <div class="popup-container" id="add-card-popup">
      <div class="popup-content">
        <section class="pay_secoint">
          <div class="pay_card">
            <h1>Save Card</h1>
            <h4>Credit or Debit Card</h4>

            <!-- Payment Form -->
            <form id="payment-form">
              <label for="name" class="pay_label">Card Holder Name</label>
              <input
                type="text"
                id="name"
                placeholder="Card Holder Name"
                class="pay_int"
                name="name"
                required
              />

              <label for="card-element" class="pay_label"
                >Enter Card Details</label
              >
              <div id="card-element">
                <!-- Stripe Card Element will be inserted here -->
              </div>
              <input
                type="text"
                id="userId"
                class="pay_int"
                name="userId"
                value="<%=  %>"
                hidden
              />
              <!--userId-->

              <div
                style="
                  display: flex;
                  justify-content: space-between;
                  margin-top: 15px;
                "
              >
                <button
                  type="button"
                  class="back-button"
                  onclick="closeAddCardPopup()"
                  style="width: auto; padding: 10px 20px"
                >
                  Back
                </button>
                <button type="submit" class="pay_submit_btn">Save Card</button>
              </div>
            </form>
          </div>
        </section>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
      function showRideDetails() {
        document.getElementById("initial-form").style.display = "none";
        document.getElementById("ride-details-form").style.display = "block";
        flatpickr("#pickup-date", {
          minDate: new Date(),
        });
      }

      function backToInitialForm() {
        document.getElementById("initial-form").style.display = "block";
        document.getElementById("ride-details-form").style.display = "none";
      }

      function submitRide() {
        alert("Ride submitted!");
      }

      function showAddCardPopup() {
        document.getElementById("add-card-popup").style.display = "flex";
      }

      function closeAddCardPopup() {
        document.getElementById("add-card-popup").style.display = "none";
      }
    </script>

    <script src="https://js.stripe.com/v3/"></script>
    <script>
      // Step 1: Initialize Stripe
      const stripe = Stripe(
        "pk_test_51Q5o9JFAHt56qUw2JK4WjGz2Et9lvPx7ImrqkCbtGLYUVRKkVAgT7LJvCSYnEPDD6GhTAyUWM41bWFlNRaOeyl3d00xT2iKrgo"
      ); // Replace with your actual publishable key
      const elements = stripe.elements();
      const cardElement = elements.create("card");
      cardElement.mount("#card-element");

      // Step 2: Handle form submission
      document
        .getElementById("payment-form")
        .addEventListener("submit", async (event) => {
          event.preventDefault();

          // Collect cardholder's name
          const cardHolderName = document.getElementById("name").value;

          // Step 3: Create token with card details and name
          const { token, error } = await stripe.createToken(cardElement, {
            name: cardHolderName,
          });

          if (error) {
            console.error("Error creating token:", error.message);
            alert(error.message);
          } else {
            console.log("Token created:", token);

            // Send the token to the server
            const response = await fetch("/api/addCardWeb", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({
                tokenId: token.id,
                userId: document.getElementById("userId").value,
              }),
            });
            // href.location.reload()
            const result = await response.json();
            console.log("result", result);
            if (result.success) {
              window.location.href = "/api/success";
            } else {
              window.location.href = "/api/failed";
            }
          }
        });
    </script>
  </body>
</html>
