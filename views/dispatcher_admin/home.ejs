<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    
    <style>
        /* General Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: sans-serif;
        }

        /* Subheader Bar */
        .subheader {
            background: #444;
            color: white;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 15px;
            margin-top: 40px; 
        }

        .subheader h2 {
            font-size: 16px;
            margin-left: 50px;
        }

        .request-btn {
            background: #222; 
            color: white;
            border: 1px solid white;
            padding: 10px 14px;
            font-size: 16px;
            cursor: pointer;
            border-radius: 30px;
            transition: 0.3s;
            margin-right: 50px;
        }

        .request-btn:hover {
            background: #000;
        }

        .table-container {
            display: flex;
            justify-content: center;
            margin-top: 50px;
        }

        /* Scrollable Table Wrapper */
        .table-wrapper {
            width: 90%;
            max-height: 340px; 
            overflow-y: auto;
            overflow-x: hidden;
            border-top: 1px solid #ddd; 
            border-bottom: 1px solid #ddd; 
            scroll-behavior: smooth;
        }

        /* Hide scrollbar but allow scrolling */
        .table-wrapper::-webkit-scrollbar {
            width: 0;
            height: 0;
        }

        /* Table Styles */
        table {
            width: 100%;
            border-collapse: collapse;
            background: white;
            font-size: 14px;
        }

        th {
            background-color: #222;
            color: white;
            padding: 14px;
            text-align: center;
            position: sticky;
            top: 0;
            z-index: 10;
        }

        td {
            padding: 14px;
            border-bottom: 1px solid #ddd;
            text-align: center;
        }

        /* Remove left & right borders */
        td:first-child, th:first-child {
            border-left: none;
        }

        td:last-child, th:last-child {
            border-right: none;
        }

        tr:last-child td {
            border-bottom: none;
        }

        /* Action Buttons */
        .action-buttons {
            display: flex;
            gap: 10px;
            justify-content: center;
        }

        .edit-btn, .cancel-btn {
            background: #222;
            color: white;
            border: none;
            padding: 8px 16px;
            font-size: 13px;
            cursor: pointer;
            border-radius: 20px;
            transition: 0.3s;
            display: flex;
            align-items: center;
            gap: 6px;
        }

        .edit-btn i {
            font-size: 12px;
        }

        .edit-btn:hover, .cancel-btn:hover {
            background: #000;
        }
        .request-link {
            color: white; 
            text-decoration: none; 
        }

    </style>
</head>
<body>

    <!-- Include Navbar -->
    <%- include('./common/navbar.ejs') %>

    <!-- Subheader Bar -->
    <div class="subheader">
        <h2>All Rides</h2>
        <button class="request-btn">
            <a href="/dispatcher/requestsrides" class="request-link">Requests</a>
        </button>   
    </div>

    <!-- Table -->
    <div class="table-container">
        <div class="table-wrapper">
            <table>
                <thead>
                    <tr>
                        <th>Patient Name</th>
                        <th>Pickup Address</th>
                        <th>Drop-off Address</th>
                        <th>Patient Phone Number</th>
                        <th>Driver</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% let rideData = [
                        { patientName: "John Doe", pickupAddress: "123 Main St", dropoffAddress: "456 Elm St", patientPhone: "(123) 456-7890", driver: "Mike Ross", status: "Completed" },
                        { patientName: "Jane Smith", pickupAddress: "789 Oak Ave", dropoffAddress: "321 Pine Rd", patientPhone: "(987) 654-3210", driver: "Harvey Specter", status: "Dispatched" },
                        { patientName: "Alice Johnson", pickupAddress: "222 Maple St", dropoffAddress: "999 Birch Ln", patientPhone: "(555) 123-4567", driver: "Rachel Zane", status: "Scheduled" },
                        { patientName: "Bob Brown", pickupAddress: "777 Cherry Dr", dropoffAddress: "888 Willow Ct", patientPhone: "(444) 987-6543", driver: "Donna Paulsen", status: "New Request" },
                        { patientName: "Eve Davis", pickupAddress: "1111 Oak St", dropoffAddress: "2222 Maple St", patientPhone: "(333) 444-5555", driver: "Louis Litt", status: "Scheduled" },
                        { patientName: "Frank Martin", pickupAddress: "3333 Pine Rd", dropoffAddress: "4444 Cherry Dr", patientPhone: "(666) 777-8888", driver: "Jessica Pearson", status: "New Request" },
                        { patientName: "George Lee", pickupAddress: "4444 Oak St", dropoffAddress: "5555 Maple St", patientPhone: "(777) 888-9999", driver: "Samantha Wheeler", status: "Scheduled" }
                    ]; %>

                    <% rideData.forEach(ride => { %>
                    <tr>
                        <td><%= ride.patientName %></td>
                        <td><%= ride.pickupAddress %></td>
                        <td><%= ride.dropoffAddress %></td>
                        <td><%= ride.patientPhone %></td>
                        <td><%= ride.driver %></td>
                        <td><%= ride.status %></td>
                        <td class="action-buttons">
                            <button class="edit-btn"><i class="fas fa-pencil-alt"></i> Edit</button>
                            <button class="cancel-btn">Cancel</button>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

</body>
</html>
