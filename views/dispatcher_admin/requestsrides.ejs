                        { patientName: "Jane Smith", pickupAddress: "789 Oak Ave", dropoffAddress: "321 Pine Rd", patientPhone: "(987) 654-3210", driver: "Harvey Specter", date: "2024-03-12", status: "Pending" },
                        { patientName: "Alice Johnson", pickupAddress: "222 Maple St", dropoffAddress: "999 Birch Ln", patientPhone: "(555) 123-4567", driver: "Rachel Zane", date: "2024-03-12", status: "Pending" },
                        { patientName: "Bob Brown", pickupAddress: "777 Cherry Dr", dropoffAddress: "888 Willow Ct", patientPhone: "(444) 987-6543", driver: "Donna Paulsen", date: "2024-03-12", status: "Pending" },
                        { patientName: "Eve Davis", pickupAddress: "1111 Oak St", dropoffAddress: "2222 Maple St", patientPhone: "(333) 444-5555", driver: "Louis Litt", date: "2024-03-12", status: "Pending" },
                        { patientName: "John Doe", pickupAddress: "123 Main St", dropoffAddress: "456 Elm St", patientPhone: "(123) 456-7890", driver: "Mike Ross", date: "2024-03-12", status: "Pending" },
                        { patientName: "Jane Smith", pickupAddress: "789 Oak Ave", dropoffAddress: "321 Pine Rd", patientPhone: "(987) 654-3210", driver: "Harvey Specter", date: "2024-03-12", status: "Pending" },
                        { patientName: "Alice Johnson", pickupAddress: "222 Maple St", dropoffAddress: "999 Birch Ln", patientPhone: "(555) 123-4567", driver: "Rachel Zane", date: "2024-03-12", status: "Pending" },
                        { patientName: "Bob Brown", pickupAddress: "777 Cherry Dr", dropoffAddress: "888 Willow Ct", patientPhone: "(444) 987-6543", driver: "Donna Paulsen", date: "2024-03-12", status: "Pending" },
                    ]; %>

                    <% completedRides.forEach(ride => { %>
                    <tr>
                        <td><%= ride.patientName %></td>
                        <td><%= ride.pickupAddress %></td>
                        <td><%= ride.dropoffAddress %></td>
                        <td><%= ride.patientPhone %></td>
                        <td><%= ride.driver %></td>
                        <td><%= ride.date %></td>
                        <td>
                            <span class="status <%= ride.status.toLowerCase().replace(' ', '-') %>">
                                <%= ride.status %>
                            </span>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

</body>
</html>
