<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Requests</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: sans-serif;
        }

        .subheader {
            background: #444;
            color: white;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 15px;
            margin-top: 40px; 
        }

        .subheader h2 {
            font-size: 16px;
            margin-left: 50px;
        }

        .request-btn {
            background: white; 
            color: black;
            border: 1px solid white;
            padding: 10px 14px;
            font-size: 16px;
            cursor: pointer;
            border-radius: 30px;
            transition: 0.3s;
            margin-right: 50px;
        }

        .table-container {
            display: flex;
            justify-content: center;
            margin-top: 50px;
        }

        /* Scrollable Table Wrapper */
        .table-wrapper {
            width: 90%;
            max-height: 310px; 
            overflow-y: auto;
            overflow-x: hidden;
            border-top: 1px solid #ddd; 
            border-bottom: 1px solid #ddd; 
            scroll-behavior: smooth;
        }

        /* Hide scrollbar but allow scrolling */
        .table-wrapper::-webkit-scrollbar {
            width: 0;
            height: 0;
        }

        /* Table Styles */
        table {
            width: 100%;
            border-collapse: collapse;
            background: white;
            font-size: 14px;
        }

        th {
            background-color: #222;
            color: white;
            padding: 14px;
            text-align: center;
            position: sticky;
            top: 0;
            z-index: 10;
        }

        td {
            padding: 14px;
            border-bottom: 1px solid #ddd;
            text-align: center;
        }

        /* Remove left & right borders */
        td:first-child, th:first-child {
            border-left: none;
        }

        td:last-child, th:last-child {
            border-right: none;
        }

        tr:last-child td {
            border-bottom: none;
        }
        .request-link {
            color: black; 
            text-decoration: none; 
        }

        /* Status Badge Styles */
.status {
    display: inline-block;
    padding: 5px 10px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: bold;
    text-transform: uppercase;
}

.pending {
    background-color: #809606; /* Orange */
    color: white;
}


    </style>
</head>
<body>

    <%- include('./common/navbar.ejs') %>

    <div class="subheader">
        <h2>Requests</h2>
        <button class="request-btn">
            <a href="/dispatcher/requestsrides" class="request-link">Requests</a>
        </button>   
    </div>

    <div class="table-container">
        <div class="table-wrapper">
            <table>
                <thead>
                    <tr>
                        <th>Patient Name</th>
                        <th>Pickup Address</th>
                        <th>Drop-off Address</th>
                        <th>Patient Phone Number</th>
                        <th>Driver</th>
                        <th>Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% let completedRides = [
